{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build all",
      "type": "shell",
      "command": "make",
      "args": ["all"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Run make all to build everything via CMake"
    },
    {
      "label": "Build options target",
      "type": "shell",
      "command": "make",
      "args": ["options"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Build only the options target"
    },
    {
      "label": "Clean build directory",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "problemMatcher": []
    }
  ]
}